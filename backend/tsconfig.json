{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // コンパイルされたJSファイルの出力先ディレクトリ
    "rootDir": "./src", // TypeScriptソースファイルのルートディレクトリ
    "sourceMap": true // デバッグ用にソースマップを生成するか
  },
  "include": ["src/**/*.ts"], // コンパイル対象のファイルパターン
  "exclude": ["node_modules"] // コンパイルから除外するフォルダ
}
